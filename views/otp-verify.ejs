<!-- views/signup.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .signup-container {
            max-width: 500px;
            margin: 2rem auto;
            padding: 2rem;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 8px;
        }
    .invalid-feedback {
    display: block;
    color: #dc3545;
    font-size: 0.875em;
    margin-top: 0.25rem;

}
.form-control.is-invalid {
    border-color: #dc3545;
    padding-right: calc(1.5em + 0.75rem);
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
    background-repeat: no-repeat;
    background-position: right calc(0.375em + 0.1875rem) center;
    background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
}
    </style>
</head>
<body>



    <!-- verify-otp.ejs -->
<div class="container">
    <div class="verification-container">
        <h2 class="text-center mb-4">Verify Your Email</h2>
        
        <% if (locals.success) { %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>

        <div class="text-center mb-4">
            <p>We've sent a verification code to:</p>
            <p class="fw-bold"><%= locals.email %></p>
        </div>



        <form action="/users/otp-verify" method="POST">
            <div class="mb-4">
                <label for="otp" class="form-label">Enter Verification Code</label>
                <input 
                    type="text" 
                    class="form-control text-center form-control-lg <%= locals.errors?.otp ? 'is-invalid' : '' %>"
                    id="otp" 
                    name="otp"
                    maxlength="6"
                    placeholder="Enter 6-digit code"
                    required
                    autofocus
                >
                <% if (locals.errors?.otp) { %>
                    <div class="invalid-feedback">
                        <%= errors.otp %>
                    </div>
                <% } %>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">Verify Email</button>
        </form>

        <div class="text-center">
            <p>Didn't receive the code?</p>
            <form action="/users/resend-otp" method="POST">
                <button type="submit" class="btn btn-link">Resend Code</button>
            </form>
        </div>

        <% if (locals.errors?.general) { %>
            <div class="alert alert-danger mt-3" role="alert">
                <%= errors.general %>
            </div>
        <% } %>
    </div>
</div>

<style>
.verification-container {
    max-width: 400px;
    margin: 2rem auto;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    background-color: white;
}

#otp {
    letter-spacing: 0.5em;
    font-size: 1.5em;
}
</style>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    </body>
    </html>
