<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sales Report</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.9/dist/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <%-include("partials/sidebar") %>
<div class="container mt-4 w-75">
    <h2>Sales Report</h2>

    <div class="mb-3">
        <form method="GET" action="/salesReport">
            <label for="date-range">Filter By Date Range:</label>
            <select name="dateRange" id="date-range" onchange="this.form.submit()">
                <option value="1-day">1 Day</option>
                <option value="1-week">1 Week</option>
                <option value="1-month">1 Month</option>
            </select>
        </form>
    </div>
    

    <!-- Table -->
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Order ID</th>
                <th>Total Amount</th>
                <th>Coupon Discount</th>
                <th>Offer Discount</th>
                <th>User name</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% salesData.forEach(order => { %>
                <tr>
                    <td><%= order.orderId %></td>
                    <td><%= order.grandTotal %></td>
                    <td><%= order.couponDiscount || 'No coupon applied' %></td>
                    <td><%= order.offerDiscount || 'No offers' %></td>
                    <td><%= order.addressDetails.firstName%></td>
                    <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Totals -->
    <div class="row text-center mt-4">
        <div class="col-md-4">
            <h4>Total Sales</h4>
            <p><strong><%= totalSales %></strong></p>
        </div>
        <div class="col-md-4">
            <h4>Total Amount</h4>
            <p><strong>₹<%= totalAmount.toFixed(2) %></strong></p>
        </div>
        <div class="col-md-4">
            <h4>Total Discount</h4>
            <p><strong>₹<%= totalDiscount.toFixed(2) %></strong></p>
        </div>
    </div>

    <!-- Export Buttons -->
    <div class="text-right mt-3">
        <a href="/admin/export/excel" class="btn btn-success">Download Excel</a>
        <a href="/admin/export/pdf" class="btn btn-danger">Download PDF</a>
    </div>

    <div class="d-flex justify-content-center mt-3">
        <% if (currentPage > 1) { %>
          <a href="?page=<%= currentPage - 1 %>&limit=10" class="btn btn-secondary mx-1">&lt; Prev</a>
        <% } %>
      
        <% for (let i = 1; i <= totalPages; i++) { %>
          <a 
            href="?page=<%= i %>&limit=10" 
            class="btn <%= i === currentPage ? 'btn-primary' : 'btn-secondary' %> mx-1"
          >
            <%= i %>
          </a>
        <% } %>
      
        <% if (currentPage < totalPages) { %>
          <a href="?page=<%= currentPage + 1 %>&limit=10" class="btn btn-secondary mx-1">Next &gt;</a>
        <% } %>
    
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.9/dist/sweetalert2.all.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
