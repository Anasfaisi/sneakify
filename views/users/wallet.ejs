<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Wallet</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<style>
  .pagination .page-item.active .page-link {
  background-color: #007bff;
  border-color: #007bff;
  color: white;
}
.pagination .page-link {
  color: #007bff;
}
.pagination .page-link:hover {
  color: #0056b3;
}

</style>
<body>
  <div class="container mt-5">
    <!-- Wallet Balance Section -->

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/users/profile">profile</a></li>
        <li class="breadcrumb-item"><a href="/users/wallet">Wallet</a></li>
        
      </ol>
    </nav>
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h4>My Wallet</h4>
      </div>
      <div class="card-body text-center">
        <h1 class="display-4 text-success">₹<%= wallet.balance.toFixed(2) %></h1>
        <p class="text-muted">Available Balance</p>
      </div>
    </div>

    <!-- Transaction History Section -->
    <!-- Transaction History Section -->
<div class="mt-4">
  <h5 class="mb-3">Transaction History</h5>
  <% if (wallet.transactions.length > 0) { %>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Date</th>
          <th>Description</th>
          <th>Type</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% wallet.transactions.forEach((transaction, index) => { %>
          <tr>
            <td><%= (currentPage - 1) * 10 + index + 1 %></td>
            <td><%= new Date(transaction.date).toLocaleDateString() %></td>
            <td><%= transaction.description %></td>
            <td>
              <span
                class="badge <%= transaction.type === 'credit' ? 'bg-success' : 'bg-danger' %>"
              >
                <%= transaction.type === 'credit' ? 'Credit' : 'Debit' %>
              </span>
            </td>
            <td>
              ₹<%= transaction.amount.toFixed(2) %>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <!-- Pagination -->
    <nav aria-label="Transaction History Pagination">
      <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
          </li>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } else { %>
    <div class="alert alert-info">
      No transactions yet. Start shopping to see your wallet in action!
    </div>
  <% } %>
</div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
