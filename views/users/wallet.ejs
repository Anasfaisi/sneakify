<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Wallet</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<body>
  <div class="container mt-5">
    <!-- Wallet Balance Section -->
    <div class="card">
      <div class="card-header bg-primary text-white">
        <h4>My Wallet</h4>
      </div>
      <div class="card-body text-center">
        <h1 class="display-4 text-success">₹<%= wallet.balance.toFixed(2) %></h1>
        <p class="text-muted">Available Balance</p>
      </div>
    </div>

    <!-- Transaction History Section -->
    <div class="mt-4">
      <h5 class="mb-3">Transaction History</h5>
      <% if (wallet.transactions.length > 0) { %>
        <table class="table table-striped table-bordered">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Date</th>
              <th>Description</th>
              <th>Type</th>
              <th>Amount</th>
            </tr>
          </thead>
          <tbody>
            <% wallet.transactions.forEach((transaction, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= new Date(transaction.date).toLocaleDateString() %></td>
                <td><%= transaction.description %></td>
                <td>
                  <span
                    class="badge <%= transaction.type === 'credit' ? 'bg-success' : 'bg-danger' %>"
                  >
                    <%= transaction.type === 'credit' ? 'Credit' : 'Debit' %>
                  </span>
                </td>
                <td>
                  ₹<%= transaction.amount.toFixed(2) %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <div class="alert alert-info">
          No transactions yet. Start shopping to see your wallet in action!
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
