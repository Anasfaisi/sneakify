<%-include("partials/header") %>
    <link rel="stylesheet" href="home.css">
    <a href="/users/logout">logout</a>
    

    <!-- Home Section -->
    <div class="container-fluid my-5">
        <!-- First Section: Welcome Message and Side Image -->
        <div class="row align-items-center">
            <div class="col-md-8 text-start">
                <h1 class="display-4 fw-bold pl-5" >Welcome to Shoe Destiny</h1>
                <p class="lead">
                    Step into a world of comfort, style, and perfection. Explore the finest collection of shoes designed just for you!
                </p>
            </div>
            <div class="col-md-4 text-center">
                <img src="/assets/images/main_image2.png" alt="Main Shoe" class="img-fluid" style="opacity: 0.9;">
            </div>
        </div>
    </div>
    
    <!-- Second Section: Community Section -->
    <div class="container-fluid p-0">
        <div class="position-relative">
            <img src="/assets/images/community.avif" alt="Community" class="img-fluid w-100" style="height: 100vh; object-fit: cover;">
            <div class="position-absolute top-50 start-50 translate-middle text-white text-center">
                <h2 class="fw-bold">Join Our Community</h2>
                <p class="lead">
                    Be part of an exclusive group of sneaker enthusiasts. Discover the latest trends and styles.
                </p>
            </div>
        </div>
    </div>

    <div class="related-products mt-5 p-5">
        <h3>New Arrivals</h3>
        <div class="d-flex flex-wrap gap-4 p-5">
            <% products.forEach(product => { %>
               <a href="/users/shop"> <div class="product-card card shadow-sm" style="width: 18rem;">
                    <img src="/<%= product.images[0] %>" class="card-img-top" alt="<%= product.name %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text">$<%= product.price.toFixed(2) %></p>
                        <a href="/users/productDetails/<%= product._id %>" class="btn btn-primary w-100">View Details</a>
                    </div></a>
                </div>
            <% }); %>
        </div>
    </div>
    

<%-include("partials/footer") %>