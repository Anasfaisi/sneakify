<%-include("partials/header") %>
    <link rel="stylesheet" href="/stylesheets/home.css">
    
<!-- Welcome Section -->
<section class="welcome-section">
    <div class="welcome-content">
        <div class="welcome-text">
            <h1>Welcome to Shoe Destiny</h1>
            <p>Step into a world of comfort, style, and perfection. Explore the finest collection of shoes designed just for you!</p>
        </div>
        <div class="welcome-image">
            <img src="/assets/images/main_image2.png" alt="Main Shoe">
        </div>
    </div>
</section>

<!-- Community Section -->
<section class="community-section position-relative">
    <img src="/assets/images/community.avif" alt="Community" class="community-background img-fluid w-100">
    <div class="community-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center">
        <div class="community-content text-center p-4 p-md-5 bg-dark bg-opacity-50 text-white rounded-3">
            <h2 class="display-5 fw-bold mb-3">Join Our Community</h2>
            <p class="lead mb-4">Be part of an exclusive group of sneaker enthusiasts. Discover the latest trends and styles.</p>
            <a href="#" class="btn btn-outline-light btn-lg">Explore Now</a>
        </div>
    </div>
</section>

<!-- New Arrivals Section -->
<section class="new-arrivals">
    <h3>New Arrivals</h3>
    <div class="product-grid">
        <% products.forEach(product => { %>
            <a href="/users/productDetails/<%= product._id %>" class="product-card">
                <img src="/<%= product.images[0] %>" alt="<%= product.name %>">
                <div class="product-card-body">
                    <h4 class="product-card-title"><%= product.name %></h4>
                    <p class="product-card-price">â‚¹<%= product.price.toFixed(2) %></p>
                    <button class="product-card-btn">View Details</button>
                </div>
            </a>
        <% }); %>
    </div>
</section>

<%-include("partials/footer") %>