<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Details</title>
  <link rel="stylesheet" href="/styles.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <div class="order-details">
    <h1>Order Details</h1>
    <div class="order-info">
      <p><strong>Order ID:</strong> <%= order._id %></p>
      <p><strong>Status:</strong> <%= order.status %></p>
      <p><strong>Items:</strong></p>
      <ul>
        <% order.products.forEach(item => { %>
          <li>
            <strong><%= item.productId.name %></strong> - Size: <%= item.size %>, Quantity: <%= item.quantity %>
          </li>
        <% }); %>
      </ul>
    </div>

    <% if (order.status === 'pending') { %>
      <!-- Button to trigger cancellation modal -->
      <button id="cancelOrderButton" data-order-id="<%= order._id %>">Request Cancellation</button>
    <% } else if (order.status === 'cancelRequested') { %>
      <p>Your cancellation request is under review.</p>
    <% } else if (order.status === 'cancelled') { %>
      <p>Your order has been cancelled.</p>
    <% } else { %>
      <p>Order cannot be cancelled at this stage.</p>
    <% } %>
  </div>

  <!-- Modal for cancellation reason -->
  <div id="cancelModal" class="modal hidden">
    <div class="modal-content">
      <span class="close" id="closeModal">&times;</span>
      <h2>Request Order Cancellation</h2>
      <form id="cancelOrderForm">
        <label for="cancelReason">Reason for cancellation (optional):</label>
        <textarea id="cancelReason" name="reason" rows="4" placeholder="Enter your reason here"></textarea>
        <button type="submit">Submit Request</button>
      </form>
    </div>
  </div>

  <script>
    const cancelOrderButton = document.getElementById("cancelOrderButton");
    const cancelModal = document.getElementById("cancelModal");
    const closeModal = document.getElementById("closeModal");
    const cancelOrderForm = document.getElementById("cancelOrderForm");

    if (cancelOrderButton) {
      cancelOrderButton.addEventListener("click", () => {
        cancelModal.classList.remove("hidden"); // Show the modal
      });
    }

    closeModal.addEventListener("click", () => {
      cancelModal.classList.add("hidden"); // Hide the modal
    });

    cancelOrderForm.addEventListener("submit", async (e) => {
      e.preventDefault();
      const orderId = cancelOrderButton.getAttribute("data-order-id");
      const reason = document.getElementById("cancelReason").value;

      try {
        const response = await fetch(`/users/cancelOrder/${orderId}`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ reason }),
        });

        const data = await response.json();

        if (response.ok) {
          Swal.fire({
            icon: "success",
            title: "Request Sent",
            text: data.message,
          }).then(() => {
            window.location.reload(); // Reload to update the order status
          });
        } else {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: data.message,
          });
        }
      } catch (error) {
        console.error("Error sending cancellation request:", error);
        Swal.fire({
          icon: "error",
          title: "Error",
          text: "An unexpected error occurred while sending the cancellation request.",
        });
      }
    });
  </script>
</body>
</html>
